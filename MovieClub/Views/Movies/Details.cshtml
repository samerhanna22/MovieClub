@model MovieClub.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Date.ToString()</li>
    <li>Added Date: @Model.DateAdded.Date.ToString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

